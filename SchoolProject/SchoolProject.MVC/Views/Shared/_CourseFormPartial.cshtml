@model SchoolProject.Models.Course

<div asp-validation-summary="ModelOnly"></div>
<input type="hidden" asp-for="CourseId" />
<div class="form-group mb-2">
    <label asp-for="CourseName" class="control-label mb-1"></label>
    <input asp-for="CourseName" class="form-control" />
    <span asp-validation-for="CourseName" class="text-danger"></span>
</div>
<div class="form-group mb-2">
    <label asp-for="CourseDescription" class="control-label mb-1"></label>
    <input asp-for="CourseDescription" class="form-control" />
    <span asp-validation-for="CourseDescription" class="text-danger"></span>
</div>
<div class="form-group">
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>