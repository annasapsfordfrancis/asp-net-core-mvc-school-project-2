@using SchoolProject.Models
@model Course
@{
    ViewBag.Title = "New Course";
}
<h1>@ViewBag.Title</h1>
@using(Html.BeginForm()){
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-2">
                @Html.LabelFor(model => model.CourseName)
                @Html.TextBoxFor(model => model.CourseName, new { @class="form-control"})
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                @Html.LabelFor(model => model.CourseDescription)
                @Html.TextBoxFor(model => model.CourseDescription, new { @class="form-control"})
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
}