@using SchoolProject.Models
@model UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div>
    <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserType.UserTypeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserType.UserTypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.School.SchoolName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.School.SchoolName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <input type="hidden" asp-for="User.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>