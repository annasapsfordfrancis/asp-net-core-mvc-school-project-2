@model SchoolProject.Models.UserListViewModel

@{
    ViewData["Title"] = "Users";
}

<div>
    <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    <form>
        <div class="row align-items-end">
            <div class="col-md-4">
                <div class="form-group mb-2">
                    <label asp-for="@Model.SelectedSchoolId" class="control-label mb-1 float-start">School</label>
                    <select id="SchoolSelect" asp-items="@(new SelectList(Model.SchoolList, "SchoolId", "SchoolName", Model.SelectedSchoolId))" asp-for="@Model.SelectedSchoolId" class="form-control">
                        <option value="0">Select Option</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-2">
                    <label asp-for="@Model.SelectedUserTypeId" class="control-label mb-1 float-start">User Type</label>
                    <select id="UserTypeSelect" asp-items="@(new SelectList(Model.UserTypeList, "UserTypeId", "UserTypeName", Model.SelectedUserTypeId))" asp-for="@Model.SelectedUserTypeId" class="form-control">
                        <option value="0">Select Option</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-2">
                    <button id="searchButton" class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>
        
    </form>
    <partial name="_UserTablePartial" for="@Model.UserResults" />

    <div class="text-center"><a asp-controller="User" asp-action="Create" class="btn btn-secondary">New</a></div>
</div>

<script>
    function filterResults(event)
    {
        event.preventDefault();
        let selectedSchool = document.querySelector('#SchoolSelect').value;
        let selectedUserType = document.querySelector('#UserTypeSelect').value;

        fetch(`@Url.Action("FilterUserResultsTable", "User")?schoolId=${selectedSchool}&userTypeId=${selectedUserType}`)
        .then((response) => { return response.text(); })
        .then((result) => {
                document.querySelector('#filteredUsers').innerHTML = result;
        });
    }
    
    document.querySelector('#searchButton').addEventListener("click", filterResults);
</script>